{{> navbar}}
{{#each orders}}
<div class="mt-5">
<h2>Pedido con id: {{_id}}</h2>
 <h2>Estado del pedido: {{state}}</h2>
  <form action="/changestate?_method=PUT" class="mb-3" method="POST">
      <input type="hidden"  class="form-control" name="_id" value={{_id}}>
      
      <div class="form-check">
  <input class="form-check-input" type="radio" name="state" value="Aceptado" id="flexRadioDefault1">
  <label class="form-check-label" for="flexRadioDefault1">
    Aceptar
  </label>
</div>
   <div class="form-check">
  <input class="form-check-input" type="radio" name="state" value="Denegado" id="flexRadioDefault3">
  <label class="form-check-label" for="flexRadioDefault3">
    Dengado
  </label>
</div>
<div class="form-check">
  <input class="form-check-input" type="radio" name="state" value="Pendiente" id="flexRadioDefault2">
  <label class="form-check-label" for="flexRadioDefault2">
    Pendiente
  </label>
</div>
 
      <button type="submit" class="btn btn-primary">Cambiar estado de la compra</button>
</form>
{{#each items}}

<div class="card mb-3 mt-5">
  <img src="../../img/products/{{url}}" class="card-img-top "  style="width: 25%" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
   <p>Descripcion: {{description}}</p>
   <p>Cantidad: {{quantity}}</p>
    <p class="card-text"><small class="text-muted">El codigo de Producto es : {{_id}}</small></p>
    <h5>Precio: {{price}}</h5>
   
   
    <a href="/accept" class="btn btn-success">Aceptar</a>
</div>
</div>
      {{/each}} 
      
</div>
<div class="row bg-primary altura"></div>     
 {{/each}}