{{> navbar }}
<table class="table my-5">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Foto</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Categoria</th>
      <th scope="col" >Precio</th>
      <th scope="col" >Cantidad</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  
    {{#each products}}
    <tr>

      <th scope="row">{{name}}</th>
      <td><img src="../../img/products/{{url}}" class="img-fluid w-25" alt="Responsive image"></td>
      <td>{{description}}</td>
      <td>{{category}}</td>
      <td>{{price}}</td>
      <td>{{quantity}}</td>
    <form action="/cart?_method=DELETE" method="POST">
     <input type="hidden" name="_id" value={{_id}}>
      <td><button type="submit" class="btn btn-primary">Retirar del carrito</button></td>
    </form>
    </tr>
    
    {{/each}}
</tbody>
</table> 
<a href="/order" class="btn btn-success">Comprar carrito</a>
