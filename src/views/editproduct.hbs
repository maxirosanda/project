{{> navbar}}
{{#each product}}
<img src="../../img/products/{{url}}" class="img-fluid w-25 mb-5 mt-5" alt="Responsive image">
 <form action="/products?_method=PUT" method="POST" enctype="multipart/form-data">
 <input type="hidden" value={{_id}} name="_id">
 <input type="hidden" value={{url}} name="url">
  <div class="mb-3">
    <label  class="form-label">Nombre</label>
    <input type="text" class="form-control" value={{name}} name="name">
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Descripcion</label>
    <textarea class="col-12" name="description"   cols="50" required>{{description}}</textarea>
  </div>
    <div class="mb-3">
    <label  class="form-label">Categoria</label>
    <input type="text" class="form-control" value={{category}} name="category">
  </div>
       <div class="mb-3">
    <label for="imagen">Ingresar Imagen del Producto</label>
    <input type="file" accept="image/x-png,image/gif,image/jpeg" class="form-control-file" name="newurl">
  </div>
    <div class="mb-3">
    <label  class="form-label">Precio</label>
    <input type="number" class="form-control" value={{price}} name="price">
  </div>
      <div class="mb-3">
    <label  class="form-label">Stock</label>
    <input type="number" class="form-control" value={{stock}} name="stock">
  </div>
  <button type="submit" class="btn btn-primary">Actualizar</button>
</form>
<form action="/products?_method=DELETE" method="POST">
      <input type="hidden"  class="form-control" name="url" value={{url}}>
       <input type="hidden" value={{_id}} name="_id">
      <button type="submit" class="btn btn-primary">Borrar</button>
    </form>
{{/each}}